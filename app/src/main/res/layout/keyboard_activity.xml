<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.08"
        android:background="@drawable/light_gray_rectangle_black_border"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/homeButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/baseline_home_24"
            android:contentDescription="@string/todo" />

        <ImageView
            android:id="@+id/favoriteButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_star_24"
            android:contentDescription="@string/todo" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.21"
        android:layout_marginTop="5dp"
        android:background="@drawable/light_perp_rectangle_black_border"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/playButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:src="@drawable/baseline_play_circle_filled_24"
                tools:ignore="NestedWeights"
                android:contentDescription="@string/todo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:ignore="NestedWeights" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_marginTop="5dp"
        android:background="@drawable/red_rectangle_black_border"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout9">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_play"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:fadeScrollbars="true"
            android:scrollbars="horizontal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout13"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout12"
        android:background="#E2C3E8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/keyboardButton1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:text="q"
                android:autoSizeTextType="uniform"
                android:background="@drawable/key_bg"
                tools:ignore="NestedWeights"/>

            <Button
                android:id="@+id/keyboardButton2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:text="w"
                android:autoSizeTextType="uniform"
                android:background="@drawable/key_bg"/>

            <Button
                android:id="@+id/keyboardButton3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:text="E"
                android:autoSizeTextType="uniform"
                android:background="@drawable/key_bg"/>

            <Button
                android:id="@+id/keyboardButton4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:text="R"
                android:autoSizeTextType="uniform"
                android:background="@drawable/key_bg"/>

            <Button
                android:id="@+id/keyboardButton5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:background="@drawable/key_delete"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/keyboardButton6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:text="T"
                android:autoSizeTextType="uniform"
                android:background="@drawable/key_bg"/>

            <Button
                android:id="@+id/keyboardButton7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:text="Y"
                android:autoSizeTextType="uniform"
                android:background="@drawable/key_bg"/>

            <Button
                android:id="@+id/keyboardButton8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:text="U"
                android:autoSizeTextType="uniform"
                android:background="@drawable/key_bg"/>

            <Button
                android:id="@+id/keyboardButton9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:text="I"
                android:autoSizeTextType="uniform"
                android:background="@drawable/key_bg"/>

            <Button
                android:id="@+id/keyboardButton10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:text="O"
                android:autoSizeTextType="uniform"
                android:background="@drawable/key_bg"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/keyboardButton11"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:text="P"
                android:autoSizeTextType="uniform"
                android:background="@drawable/key_bg"/>

            <Button
                android:id="@+id/keyboardButton12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:text="A"
                android:autoSizeTextType="uniform"
                android:background="@drawable/key_bg"/>

            <Button
                android:id="@+id/keyboardButton13"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:text="S"
                android:autoSizeTextType="uniform"
                android:background="@drawable/key_bg"/>

            <Button
                android:id="@+id/keyboardButton14"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:text="D"
                android:autoSizeTextType="uniform"
                android:background="@drawable/key_bg"/>

            <Button
                android:id="@+id/keyboardButton15"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:text="F"
                android:autoSizeTextType="uniform"
                android:background="@drawable/key_bg"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/keyboardButton16"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:text="G"
                android:autoSizeTextType="uniform"
                android:background="@drawable/key_bg"/>

            <Button
                android:id="@+id/keyboardButton17"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:text="H"
                android:autoSizeTextType="uniform"
                android:background="@drawable/key_bg"/>

            <Button
                android:id="@+id/keyboardButton18"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:text="J"
                android:autoSizeTextType="uniform"
                android:background="@drawable/key_bg"/>

            <Button
                android:id="@+id/keyboardButton19"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:text="K"
                android:autoSizeTextType="uniform"
                android:background="@drawable/key_bg"/>

            <Button
                android:id="@+id/keyboardButton20"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:text="L"
                android:autoSizeTextType="uniform"
                android:background="@drawable/key_bg"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/keyboardButton21"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:text="Z"
                android:autoSizeTextType="uniform"
                android:background="@drawable/key_bg"/>

            <Button
                android:id="@+id/keyboardButton22"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:text="X"
                android:autoSizeTextType="uniform"
                android:background="@drawable/key_bg"/>

            <Button
                android:id="@+id/keyboardButton23"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:text="C"
                android:autoSizeTextType="uniform"
                android:background="@drawable/key_bg"/>

            <Button
                android:id="@+id/keyboardButton24"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:text="V"
                android:autoSizeTextType="uniform"
                android:background="@drawable/key_bg"/>

            <Button
                android:id="@+id/keyboardButton25"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:text="B"
                android:autoSizeTextType="uniform"
                android:background="@drawable/key_bg"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/keyboardButton26"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:text="N"
                android:autoSizeTextType="uniform"
                android:background="@drawable/key_bg"/>

            <Button
                android:id="@+id/keyboardButton27"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:layout_margin="2dp"
                android:background="@drawable/key_space"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:text="123?!"
                android:autoSizeTextType="uniform"
                android:background="@drawable/key_bg"/>

            <Button
                android:id="@+id/keyboardButton28"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:text="M"
                android:autoSizeTextType="uniform"
                android:background="@drawable/key_bg"/>

        </LinearLayout>

    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>