                android:autoSizeTextType="uniform"
                android:background="@drawable/key_bg"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/keyboardButtonZ"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:text="Z"
                android:autoSizeTextType="uniform"
                android:background="@drawable/key_bg"/>

            <Button
                android:id="@+id/keyboardButtonX"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:text="X"
                android:autoSizeTextType="uniform"
                android:background="@drawable/key_bg"/>

            <Button
                android:id="@+id/keyboardButtonC"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:text="C"
                android:autoSizeTextType="uniform"
                android:background="@drawable/key_bg"/>

            <Button
                android:id="@+id/keyboardButtonV"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:text="V"
                android:autoSizeTextType="uniform"
                android:background="@drawable/key_bg"/>

            <Button
                android:id="@+id/keyboardButtonB"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:text="B"
                android:autoSizeTextType="uniform"
                android:background="@drawable/key_bg"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/keyboardButtonN"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:text="N"
                android:autoSizeTextType="uniform"
                android:background="@drawable/key_bg"/>

            <Button
                android:id="@+id/keyboardButtonSpace"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:layout_margin="2dp"
                android:text="SPACE"
                android:autoSizeTextType="uniform"
                android:background="@drawable/key_space"/>

            <Button
                android:id="@+id/keyboardButtonSpecialChar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:text="123?!"
                android:autoSizeTextType="uniform"
                android:background="@drawable/key_bg"/>

            <Button
                android:id="@+id/keyboardButtonM"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:text="M"
                android:autoSizeTextType="uniform"
                android:background="@drawable/key_bg"/>

        </LinearLayout>

    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>